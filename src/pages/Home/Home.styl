#home
  .kdjz
    height: 60px
    line-height: @height
    .logo
      padding-left: 10px
      span
        font-size: 16px
        margin-left: 10px
      img
        width: 40px
        height: 40px
        border-radius: 50%
        vertical-align: middle
    .download
      text-align: right
      padding-right: 10px
      button
        border-radius: 20px
  .banner
    img
      width: 100%
      height: 350px
  .actions
    text-align: center
    button
      border-radius: 20px
      width 200px
      margin 20px 0
    .rule
      font-size: 14px
      color: #50a0ff
    .active-rule
      text-align: right
      padding-right: 20px
    .club-rule
      text-align: left
      padding-left: 20px
  .rewards
    color #333333
    text-align: center
    margin-top 20px
    .title
      margin-bottom 10px
    img
      width: 100%
      height 400px
    button
      margin 20px 0
      width 200px
      border-radius: 30px
  .advertisement
    text-align: center
    padding-bottom 20px
    i
      margin: 0 20px
      font-size: 20px
      vertical-align: middle